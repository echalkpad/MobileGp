<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="@dimen/margin_ss"
	android:paddingBottom="@dimen/margin_ss"
	android:orientation="horizontal"
	android:background="@android:color/white">

	<TextView
		android:id="@+id/tv_measure_time"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_gravity="center_vertical"
		android:paddingLeft="@dimen/margin_l"
		android:text="21:30"
		android:textColor="@android:color/black" />

	<RelativeLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="3"
		android:layout_centerVertical="true">

		<TextView
			android:id="@+id/tv_sbp_dbp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:text="120/80"
			android:textSize="18sp"
			android:textColor="@android:color/black"/>

		<TextView
			android:id="@+id/tv_mmhg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@+id/tv_sbp_dbp"
			android:text="@string/mmhg"
			android:textSize="12sp"
			android:textColor="@android:color/black"/>

		<ImageView
			android:id="@+id/img_pulse_rate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_centerVertical="true"
			android:background="@drawable/pulse_rate"/>

		<TextView
			android:id="@+id/tv_pulse_rate"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/img_pulse_rate"
			android:layout_marginLeft="@dimen/margin_sss"
			android:layout_centerVertical="true"
			android:text="80"
			android:textSize="18sp"
			android:textColor="@android:color/black"/>

		<TextView
			android:id="@+id/tv_bpm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/tv_pulse_rate"
			android:layout_centerVertical="true"
			android:text="@string/per_min"
			android:textSize="12sp"
			android:textColor="@android:color/black"/>

		<TextView
			android:id="@+id/tv_level"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="@dimen/margin_l"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:textSize="18sp"
			android:textColor="@android:color/black"/>

	</RelativeLayout>

</LinearLayout>

