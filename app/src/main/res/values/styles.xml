<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="LabelText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PopupMenuItem">
        <item name="android:layout_marginTop">@dimen/margin_ss</item>
        <item name="android:layout_marginBottom">@dimen/margin_ss</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SearchStyle">
        <item name="android:paddingLeft">@dimen/margin_s</item>
        <item name="android:paddingRight">@dimen/margin_s</item>
        <item name="android:paddingTop">@dimen/margin_sss</item>
        <item name="android:paddingBottom">@dimen/margin_sss</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DateSearchStyle" parent="SearchStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/circular_rectangle_border</item>
    </style>

</resources>
